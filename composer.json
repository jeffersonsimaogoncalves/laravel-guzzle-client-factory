{
    "name": "einar-johan/guzzle-client-factory",
    "description": "Common interface for HTTP client factories",
    "keywords": [
        "einar-johan",
        "http",
        "http-client",
        "guzzle-client-factory",
        "psr",
        "psr-18"
    ],
    "homepage": "https://github.com/einar-johan/guzzle-client-factory",
    "license": "MIT",
    "authors": [
        {
            "name": "Einar-Johan Hansen",
            "email": "hello@einarhansen.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "EinarJohan\\Http\\Factories\\": "src"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
